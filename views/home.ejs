<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home</title>
    <%- include('./partials/head') %>
  </head>

  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-5 mb-5 ">
      <div class="row g-4">
        <% blogs.forEach(blog => { %>
        <div class="col-12 col-sm-6 col-md-4">
          <div class="card h-100 shadow-sm">
            <img src="<%= blog.coverImageUrl %>" class="card-img-top" alt="Blog Image" />
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= blog.tital %></h5>
              <p class="card-text text-muted">
                Short description ya blog ka preview yahan aa sakta hai...
              </p>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto">Read More</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
